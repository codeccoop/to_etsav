header
    height: $header
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    z-index: 1000

    &.green .header__icon
      color: green

    &.dark
      .header__burger-menu.open .header__burger-menu__wrapper
        background:  linear-gradient(#0000, #0002)

      .header__link
        color: black

    &.breadcrumb
      .header__content
        background: linear-gradient(#fff, #fff0)

      .header__nav-pannel
        display: block

      .header__link
        pointer-events: none
        font-weight: bold

    .header__content
      display: flex
      flex-direction: column
      height: 100%

    .header__row
      display: flex
      padding: 0px 20px
      flex: 0

      &.header__main-row
        flex: 1

    .header__icon-wrapper
      height: 100%
      padding: 0px 20px 0 10px

      @media screen and (max-width: 950px)
        padding-left: 0px

    .header__icon
      font-size: 50px
      font-weight: bold
      color: $magenta
      text-align: center
      cursor: pointer
      line-height: $header
      transition: color .5s

    .header__links-wrapper
      display: flex
      flex: 1

      @media screen and (max-width: 950px)
        display: none

    .header__burger-wrapper
      flex: 1
      display: none

      @media screen and (max-width: 950px)
        display: block

    .header__burger-menu
      width: fit-content
      position: relative
      display: flex
      padding-top: 36px

      &.open
        .header__burger-menu__wrapper
          background: linear-gradient(#fff0, #fff6);
          box-shadow: 0px 5px 6px #0002

        .header__burger-menu__veil
          width: 0px

        .header__burger-menu__item
          display: block

      .header__burger-menu__wrapper
        padding: 0.5em 1em
        border-radius: 4px
        position: relative

      .header__burger-menu__veil
        position: absolute
        left: 0px
        top: 0px
        width: 100%
        height: 100%
        z-index: 10
        background-color: darkred
        opacity: .0
        transition: width .5s
        pointer-events: none

      .header__burger-menu__item
        line-height: 2
        display: none
        margin: 0px

        &.active
          display: block

    .header__link
        margin: 0px 10px
        color: white
        font-size: 17px
        line-height: $header
        font-weight: 300
        text-transform: uppercase
        cursor: pointer
        transition: color .5s, font-weight .3s

        /* &:hover
            text-decoration: underline */

        &.active
          font-weight: 600

        @media screen and (max-width: 600px)
          font-size: 14px

    .header__lng-menu
      flex: 0

    .header__nav-pannel
      display: none

    .header__nav-btn
      color: $magenta
      font-size: 3.5rem
      text-align: left
      cursor: pointer
      line-height: 45px
      font-weight: 300
