#lngMenu
    height: 100%
    text-transform: uppercase
    text-align: right
    position: relative
    width: fit-content
    margin-left: auto

    &[lang="es"] .lng-menu__list-item[lang="es"]
    &[lang="en"] .lng-menu__list-item[lang="en"]
    &[lang="ca"] .lng-menu__list-item[lang="ca"]
      font-weight: bold
      display: block

  .lng-menu__wrapper
    position: relative

    &:hover
      .lng-menu__list-item
        display: block

      .lng-menu__list-veil
        width: 0%

  .lng-menu__list
    position: absolute
    z-indez: 10
    display: block
    right: 0px
    top: 36px

  .lng-menu__list-wrapper
    position: relative

  .lng-menu__list-veil
    position: absolute
    top: 0px
    left: 0px
    width: 100%
    height: 100%
    background-color: darkred
    opacity: .0
    transition: width .5s
    z-index: 10

  .lng-menu__list-item
    cursor: pointer
    color: $font-color
    display: none

    &:hover
      font-weight: bold
