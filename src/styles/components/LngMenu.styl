header.dark #lngMenu .lng-menu__item
  text-shadow: 1px 1px 3px rgba(50, 50, 50, .5)

#lngMenu
    height: 100%
    text-transform: uppercase
    text-align: right
    position: relative
    width: fit-content
    margin-left: auto

    &[lang="es"] .lng-menu__list-item[lang="es"]
      display: block

    &[lang="en"] .lng-menu__list-item[lang="en"]
      display: block

    &[lang="ca"] .lng-menu__list-item[lang="ca"]
      display: block

  .lng-menu__wrapper
    position: relative

    &:hover
      .lng-menu__list-item
        display: block

      .lng-menu__list-veil
        width: 0%

  .lng-menu__list
    position: absolute
    z-indez: 10
    display: block
    right: 0px
    top: 36px

  .lng-menu__list-wrapper
    position: relative

  .lng-menu__list-veil
    position: absolute
    top: 0px
    left: 0px
    width: 100%
    height: 100%
    background-color: darkred
    opacity: .0
    transition: width .5s
    z-index: 10

  .lng-menu__list-item
    cursor: pointer
    color: #ccc
    text-shadow: 1px 1px 3px rgba(150, 150, 150, .5)
    display: none

    &:hover
      color: #222
