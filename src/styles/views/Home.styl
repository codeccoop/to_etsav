#home
  &.dark .home__nav-btn
    filter: invert(0)
    opacity: .5

  .home__imgs-container
    position: relative

  .scroll-section
    width: 100vw
    height: 100vh

  .section-wrapper
    height: 100%
    width: 100%

  .home__nav-btn
    position: fixed
    display: none
    z-index: 1000
    border-radius: 50%
    height: 40px
    width: 40px
    left: 15px
    border: .5px solid #3332
    background-image: url(public/images/home-sections/arrow.png)
    background-repeat: no-repeat
    background-size: 70%
    background-position: center
    background-color: #0001
    filter: invert(1)
    cursor: pointer

    &[dir="top"]
      bottom: 70px

      [current-section="cover"] &
        display: none

    &[dir="bottom"]
      bottom: 15px
      transform: rotate(180deg)

      [current-section="footer"] &
        display: none

    .is-touch &
      display: block