#home
  &.dark .home__nav-btn
    filter: invert(0)
    opacity: .5

  .home__imgs-container
    position: relative

  .scroll-section
    width: 100vw
    height: 100vh

  .section-wrapper
    height: 100%
    width: 100%

  .home__nav-btn
    position: fixed
    display: none
    z-index: 1000
    border-radius: 50%
    height: 40px
    width: 40px
    left: 15px
    border: .5px solid #3332
    background-repeat: no-repeat
    background-size: contain
    background-position: center
    background-color: #0001
    filter: invert(1)

    &[dir="top"]
      top: 90px
      background-image: url(/public/images/arrow-up.png)

    &[dir="bottom"]
      bottom: 15px
      background-image: url(/public/images/arrow-down.png)

    @media screen and (max-width: 950px)
      display: block
