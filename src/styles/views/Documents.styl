#doc-title {
	font-size: 40px;
	font-family: "Lucida Console", Arial, monospace;
	width:100vw;
	
	
}

.doc-summary{
	font-family:  Arial, monospace;
	
}

.doc-content{
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	height: calc(100vh - 125px);
	margin: 0px 35px 0px 35px;
}



.doc-col{
	flex-direction:column;
	flex-grow:1;
	margin:5px;
	
}

.doc-col-main{
	height:75%;
	
}

.has_file{
	display:none;
}

.doc-div{
	display: flex;
  	justify-content: center;
  	align-items: center;
  	border: 1px solid #ccc;
	border-radius:0px;
	width:100%;
	height:75%;
	align-self:center;
	margin: 0px 25px 0px 25px;
	font-size: 25px;
	font-family: "Lucida Console", Arial, monospace;
}
