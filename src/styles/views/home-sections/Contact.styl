#contact
    .contact__figure
        display: flex
		flex-direction: column
		align-items: center
        margin-top: 100px
        width: 50%
        max-width: 500px

        img
            width: 80%
            height: auto
            @media screen and (max-width: 700px)
                width: 100%    
    
        figcaption
            width: 80%
            @media screen and (max-width: 700px)
                width: 100% 
            p
            text-align: justify
        a:link, a:visited, a:hover, a:active
            color: $magenta

    .contact__content
        display: flex
        justify-content: center
		align-items: center
