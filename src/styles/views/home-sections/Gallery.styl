#gallery

  .gallery__wrapper
    height: 100%

  .gallery__content
    height: 100%
    display: flex
    flex-direction: column

    h1
      flex: 1
      display: flex
      align-items: center
      justify-content: center
      font-size: 3rem

    h2
      flex: 0
      line-height: 2
      font-size: 30px
      text-align: right
      cursor: pointer
