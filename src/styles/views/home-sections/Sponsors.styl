#sponsors
	padding-top:100px

	.sponsors__content
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center	
		padding: 0 5%
		height: calc(100% - 100px)

		.flex
			width:100%
			display: flex
			justify-content: center
			flex-wrap: wrap
			padding-bottom: 5px

			&:not(:last-child)
				border-bottom: .5px solid #ddd

    .grid-item
		display: flex
		margin: 0 2px

		&:last-child .item-name p
			border-right: unset

	.grid-img
		background-size: cover
		background-position: center
		background-repeat: no-repeat

		&.bronzesponsors__item-img
		&.collaboradorsponsors__item-img
			background-size: contain

	.title
		text-align: center
		font-weight: normal
		font-size: .8em
		margin: 0
		padding-top: 4px
		font-weight: 500

	/* INSTITUCIONAL SPONSORS */
	.institutionalsponsors__item-img
		height: 50px
		width: 60px

		@media screen and (min-height: 700px)
			height: 75px
			width: 95px

		@media screen and (max-width: 600px) and (orientation: portrait)
			height: 40px
			width: 50px

			@media screen and (max-height: 800px)
				height: 35px

	/* MAIN SPONSORS */
	.mainsponsors__item-img
		height: 45px
		width: 90px

		@media screen and (min-height: 700px)
			height: 60px
			width: 120px

		@media screen and (max-width: 600px) and (orientation: portrait)
			height: 40px
			width: 70px

			@media screen and (max-height: 800px)
				height: 35px
	
	/* OR SPONSORS */
	.orsponsors__item-img
		height: 45px
		width: 90px

		@media screen and (min-height: 700px)
			height: 50px
			width: 100px

		@media screen and (max-width: 600px) and (orientation: portrait)
			height: 40px
			width: 70px

	/* PLATA SPONSORS */
	.platasponsors__item-img
		height: 45px
		width: 45px

		@media screen and (min-height: 700px)
			height: 50px
			width: 50px

		@media screen and (max-width: 600px) and (orientation: portrait)
			height: 40px
			width: 40px

			@media screen and (max-height: 800px)
				height: 35px
				width: 35px

	/* BRONZE SPONSORS */
	.bronzesponsors__item-img
		height: 40px
		width: 40px

		@media screen and (min-height: 700px)
			height: 50px
			width: 50px

	/* COLLABORADORS & COMPETITION*/
	.collaboradorsponsors__item-img
	.competitionsponsors__item-img
		height: 40px
		width: 40px

		@media screen and (min-height: 700px)
			height: 45px
			width: 45px

	.bronzesponsors__item-img
	.collaboradorsponsors__item-img
	.competitionsponsors__item-img
		@media screen and (max-width: 700px)
			display: none

	.bronzesponsors__item-name
	.competitionsponsors__item-name
	.collaboradorsponsors__item-name
		display: none

		@media screen and (max-width: 700px)
			display: block

		> p
			font-size: 0.8rem
			cursor: pointer
			margin: 0
			border-right: 0.5px solid #ccc
			padding: 0 4px 0 0

			@media screen and (max-height: 800px)
				font-size: 0.7rem
