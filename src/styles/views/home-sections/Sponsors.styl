#sponsors 
    padding-top:90px

.sponsors__content
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  padding: 0 5%
  height: calc(100% - 90px)

  //@media screen and (max-width: 800px) and (max-height: 650px)
  //      transform: scale(.5)

  //@media screen and (max-width: 700px) and (max-height: 600px)
    //    transform: scale(.4)

  .flex
      width:100%
      display: flex
      justify-content: center
      flex-wrap: wrap

      &:not(:last-child)
          border-bottom: .5px solid grey

  .grid-item
      display: flex
      padding-bottom: 3px 
      margin: 0 2px
      &:last-child .item-name p
          border-right: none
 
  .grid-img
      background-size: cover
      background-position: center
      background-repeat: no-repeat

      &.bronzesponsors__item-img
      &.collaboradorsponsors__item-img
          background-size: contain  
  .title
      text-align: center
      font-weight: normal
      font-size: .8em
      margin: 0
      padding-bottom: 4px

.institutionalsponsors__item-img
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    height: 50px
    width: 60px
    cursor: pointer



    //MAIN SPONSORS

.mainsponsors__item-img
    height: 45px
    width: 90px

    //OR SPONSORS

.orsponsors__item-img
    height: 45px
    width: 90px

//PLATA SPONSORS

.platasponsors__item-img
    height: 45px
    width: 45px

//BRONZE SPONSORS

.bronzesponsors__item-img
    height: 45px
    width: 45px

//COLLABORADORS

.collaboradorsponsors__item-img
    height: 40px
    width: 40px
    @media screen and (max-width: 700px)
        display: none
.collaboradorsponsors__item-name
    display: none 
    > p
        font-size: 0.8em
        cursor: pointer
        margin: 0
        border-right: 0.5px solid
        padding: 0 4px 0 0 
    @media screen and (max-width: 700px)
        display: block
        
               
